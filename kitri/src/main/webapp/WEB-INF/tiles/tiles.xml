<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
       
<tiles-definitions>
	
	<!-- 홈페이지 레이아웃 -->
	<definition name="kitriLayout" template="/WEB-INF/tiles/layout/kitri/kitri_layout.jsp">
		<put-attribute name="gnv" value="/WEB-INF/tiles/layout/kitri/kitri_gnv.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/tiles/layout/kitri/kitri_footer.jsp" />
	</definition>
	
	<definition name="kitri/**.editView" extends="kitriLayout">
		<put-attribute name="body" value="/WEB-INF/views/kitri/edit_view.jsp" />
	</definition>
	
	<definition name="kitri/*" extends="kitriLayout">
		<put-attribute name="body" value="/WEB-INF/views/kitri/{1}.jsp" />
	</definition>
	
	<definition name="kitri/*/*" extends="kitriLayout">
		<put-attribute name="body" value="/WEB-INF/views/kitri/{1}/{2}.jsp" />
	</definition>
	

</tiles-definitions>